@model PinkedIn.Point.Labussiere.Modele.Entity.Employe

@{
    ViewBag.Title = "Supprimer";
}

<h2>Supprimer l'employé</h2>

<h3>Est-vous sûr de supprimer cette employé ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="mt-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt class="mt-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prenom)
        </dd>

        <dt class="mt-2">
            @Html.DisplayNameFor(model => model.DateDeNaissance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateDeNaissance)
        </dd>

        <dt class="mt-2">
            @Html.DisplayNameFor(model => model.Anciennete)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Anciennete)
        </dd>

        <dt class="mt-2">
            @Html.DisplayNameFor(model => model.Biographie)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Biographie)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-outline-dark" /> |
            @Html.ActionLink("Retourner à la liste", "Index")
        </div>
    }
</div>
