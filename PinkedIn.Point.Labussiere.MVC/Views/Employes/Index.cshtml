@model IEnumerable<PinkedIn.Point.Labussiere.Modele.Entity.Employe>

@{
    ViewBag.Title = "Tous les employés";
}

<h2>Tous les employés</h2>

<p>
    @Html.ActionLink("Ajouter", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            Prénom
        </th>
        <th>
            Date de naissance
        </th>
        <th>
            Ancienneté
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Biographie)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateDeNaissance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Anciennete)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Biographie)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Voir les détails", "Details", new { id=item.Id }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
