@model IEnumerable<PinkedIn.Point.Labussiere.Modele.Entity.Employe>

@{
    ViewBag.Title = "Tous les employés";
}

<h2>Tous les employés</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form asp-controller="EmployesController" asp-action="Index" method="post">
    <input name="searchEmployee" placeholder="rechercher" type="text"/>
    <input type="submit"/>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDeNaissance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anciennete)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Biographie)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateDeNaissance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Anciennete)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Biographie)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
