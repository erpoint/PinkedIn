@model IEnumerable<PinkedIn.Point.Labussiere.Modele.Entity.Postulation>

@{
    ViewBag.Title = "Mes postulations";
}

<h2>Mes postulations</h2>

@*<p>
    @Html.ActionLink("Postuler sur une offre", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employe.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offre.Intitule)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Statut)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employe.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Offre.Intitule)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Statut)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { offreId = item.OffreId, empId = item.EmployeId }) |
            @Html.ActionLink("Voir détails", "Details", new { item.OffreId, item.EmployeId }) |
            @*@Html.ActionLink("Supprimer", "Delete", new { item.Id })*@
        </td>
    </tr>
}

</table>
